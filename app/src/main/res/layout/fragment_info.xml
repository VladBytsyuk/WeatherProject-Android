<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInfoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information"
        android:gravity="center"
        android:layout_below="@+id/imageViewInfo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewInfoVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="v1.0" />

    <TextView
        android:id="@+id/textViewInfoThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewInfoContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/thanks" />

    <TextView
        android:id="@+id/textViewInfoContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewInfoVersion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:text="@string/e_mail" />

    <ImageView
        android:id="@+id/imageViewInfo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>